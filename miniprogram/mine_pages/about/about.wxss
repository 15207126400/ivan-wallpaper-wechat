/* 顶部 */
.headers-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 220rpx;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 99;
  backdrop-filter: blur(5px);
}
.headers-title{
  position: fixed;
  top: 100rpx;
  left: 50%;  /* 居中定位 */
  transform: translateX(-50%);  /* 向左平移自身宽度的一半 */
  font-size: 36rpx;
  font-weight: 500;
  z-index: 100;
  color: #FFFFFF;
  border-radius: 20rpx;
  /* transition: all 0.5s; */
}

/* 内容 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  box-sizing: border-box;
  height: 100vh;
  width: 100%;
  color: #FFFFFF;
}
.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
}
.version {
  margin-top: 30rpx;
  font-size: 24rpx;
}

/* 菜单 */
.menu-list{
  width: 95%;
  border-radius: 10rpx;
  margin-top: 150rpx;
  /* background: radial-gradient(#3a3a36, #94909000); */
}
.menu-items{
  width: 90%;
  height: 120rpx;
  border-bottom: 1rpx solid rgb(76 67 67);
}
.menu-items-left{
  width: 350rpx;
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: flex-start;
}
.menu-items-right{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: flex-end;
}
.menu-icon{
  height: 40rpx;
  width: 40rpx;
}
.menu-title{
  color: #fff;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.menu-remake{
  color: #989ca0;
  font-size: 26rpx;
  margin-right: 20rpx;
}

/* 免责声明 */
.bottom-content {
  position: fixed;
  width: 90%;
  padding: 20rpx;
  bottom: 80rpx;
  color: #949191;
  font-size: 24rpx;
}