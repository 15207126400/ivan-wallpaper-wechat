/* 顶部 */
.headers-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 99;
  backdrop-filter: blur(5px);
}
.headers-title{
  position: fixed;
  top: 100rpx;
  left: 50%;  /* 居中定位 */
  transform: translateX(-50%);  /* 向左平移自身宽度的一半 */
  font-size: 36rpx;
  font-weight: 500;
  z-index: 100;
  color: #FFFFFF;
  border-radius: 20rpx;
  /* transition: all 0.5s; */
}

.center-box{
  display: flex;
  color: #FFFFFF;
  margin-top: 220rpx;
  width: 88%;
  padding: 20rpx;
}

.container {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  width: 95%;
  padding: 10px;
}
.record-list {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.record-item {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  border-bottom: 1px solid #292929;
  padding: 10rpx 20rpx;
}
.record-content {
  font-size: 28rpx;
  color: #e8e8e8;
}
.record-points {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 10px;
}
.record-date {
  font-size: 24rpx;
  color: #717171;
}
.load-more-btn {
  width: 100%;
  padding: 10px;
  text-align: center;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-top: 10px;
}
.no-more-text {
  text-align: center;
  color: #999;
  font-size: 14px;
  margin-top: 10px;
}