/* 顶部 */
.headers-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 220rpx;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 99;
  backdrop-filter: blur(5px);
}
.headers-title{
  position: fixed;
  top: 100rpx;
  left: 50%;  /* 居中定位 */
  transform: translateX(-50%);  /* 向左平移自身宽度的一半 */
  font-size: 36rpx;
  font-weight: 500;
  z-index: 100;
  color: #FFFFFF;
  border-radius: 20rpx;
  /* transition: all 0.5s; */
}

/* 内容 */
.container {
  margin-top: 200rpx;
  padding: 15px;
  background-color: rgba(0, 0, 0, 0.7);
  color: #eee;
}
.section {
  width: 95%;
  margin-bottom: 20px;
  padding: 10px;
  /* background-color: rgb(41 39 39 / 70%); */
  border-radius: 15rpx;
}
.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.version, .date {
  font-size: 14px;
  color: #888;
  margin-bottom: 5px;
}
.subtitle {
  font-size: 16px;
  font-weight: bold;
  margin-top: 20rpx;
  /* margin-bottom: 10px; */
}
.content {
  font-size: 14px;
  line-height: 1.5;
  /* margin-bottom: 15rpx; */
}