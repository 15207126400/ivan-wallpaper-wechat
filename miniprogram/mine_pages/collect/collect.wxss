/* 顶部 */
.headers-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 180rpx;
  background-color: #1d2021cc;
  z-index: 99;
  backdrop-filter: blur(5px);
}
.headers-title{
  position: fixed;
  top: 100rpx;
  left: 50%;  /* 居中定位 */
  transform: translateX(-50%);  /* 向左平移自身宽度的一半 */
  font-size: 36rpx;
  font-weight: 500;
  z-index: 100;
  color: #FFFFFF;
  border-radius: 20rpx;
  /* transition: all 0.5s; */
}

/* 时间轴 */
.images-box {
  width: 90%;
  margin-top: 200rpx;
  padding: 10rpx 20rpx 10rpx 40rpx;
}
.images-point {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 15rpx 0;
}
.box-line {
  border-left: 3rpx solid #c8c9cc;
  padding: 10rpx 10rpx 10rpx 20rpx;
}
.dot {
  margin-left: -14rpx;
  background-color: #19be6b;
  box-shadow: 0 0 5rpx 5rpx #71d5a1;
  color: white;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 5rpx;
  font-size: 26rpx;
  text-align: center;
  border-radius: 50rpx;
}
.title {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  color: #FFFFFF;
}
/* 图片滑动栏 */
.scroll-box {
  display: flex;
  white-space: nowrap;
  overflow-x: scroll;
}
.scroll-item {
  display: inline-block;
  width: 170rpx;
  height: 350rpx;
  text-align: center;
  margin-right: 20rpx;
}
.image-container{
  position: relative;
  width: 100%;
  height: 100%;
}
.scroll-item-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid #3e3b3b;
}
.scroll-item-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #333;
}

/* 类型 */
.waterfall-image-top-item-box{
  position: absolute;
  background: rgb(229 245 26);
  color: #000000;
  border-radius: 20rpx;
  padding: 8rpx 18rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
}

/* 底部标签栏 */
.waterfall-tags-box {
  width: 480rpx;
  line-height: 40rpx;
  margin: 10rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.waterfall-tags{
  word-wrap: break-word;
  white-space: normal;
}