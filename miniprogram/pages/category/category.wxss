/* 头部 */
.headers-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 180rpx;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 99;
  backdrop-filter: blur(5px);
}
/* 标题 */
.headers-title{
  position: fixed;
  top: 100rpx;
  /* left: 50%;
  transform: translateX(-50%); */
  font-size: 36rpx;
  font-weight: bolder;
  z-index: 100;
  color: #FFFFFF;
  border-radius: 20rpx;
}

/* 搜索 */
.headers-search-box{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  top: 200rpx;
  left: 20rpx;
  z-index: 1;
  width: 95%;
  height: 80rpx;
  border-radius: 10rpx;
}
.headers-search-item{
  display: flex;
  align-items: center;
  background: #2f2d2d;
  height: 100%;
  width: 85%;
  padding: 0rpx 20rpx;
  border-radius: 10rpx;
}
.headers-search-img{
  width: 40rpx;
  height: 40rpx;
}
.headers-search-text{
  color: #D0D0D0;
  font-size: 30rpx;
  margin-left: 20rpx;
  flex-grow: 1;
  width: auto;
  min-width: 180rpx;
  height: 100%;
}
.headers-search-button{
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 18%;
  height: 100%;
  background-color: rgb(7 189 21 / 90%);
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

/* 分类框 */
.category-container {
  margin-top: 190rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px;
  background: #000000;
}
.category-grid{
  width: 75%;
  /* margin-bottom: 60rpx; */
}
.category-item {
  height: 180rpx;
  margin-bottom: 10px;
  background-position: center;
  background-size: cover;
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  justify-content: flex-end;
  border-radius: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #3e3b3b;
}
.category-text {
  color: #FFFFFF;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  font-family: 'Roboto', 'SF Pro Display', 'Helvetica Neue', 'Arial', sans-serif;
}
.category-english{
  font-size:20rpx;
  color:#FFFFFF;
}

/* 标题栏 */
.category-title{
  color: #ffffff;
  margin: 60rpx 0rpx 20rpx 10rpx;
  font-size: 40rpx;
  font-weight: bold;
}

/* 颜色框 */
.color-box{
  display: flex;
  flex-flow: row;
  align-items: flex-start;
  justify-content: flex-start;
  height: 300rpx;
  width: 100%;
}
.color-item{
  background-color: #313030;
  width: 100%;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: space-between;
  border-radius: 20rpx;
  padding: 10rpx;
}
.color-item-box{
  width: 100%;
}
.color-img{
  width: 90%;
  height: 75rpx;
  border-radius: 10rpx;
  margin: 10rpx;
}
.colorful-box{
  background: #313030;
  width: 24%;
  margin-left: 10rpx;
  height: 100%;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.colorful-item{
  background: linear-gradient(90deg, #ff3333, #fcff33, #33ff3d);
  border-radius: 10rpx;
  height: 85%;
  width: 70%;
}

/* 标签栏 */
.tags-item {
  height: 240rpx;
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  justify-content: flex-end;
  overflow: hidden;
  border-radius: 20rpx;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border: 1rpx solid #3e3b3b;
}
.tags-text-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(3px);
}
.tags-text {
  color: #FFFFFF;
  font-size: 24rpx;
  padding: 10rpx;
}